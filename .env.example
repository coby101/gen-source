# Database Configuration
PRODUCTION_DB=genealogy_db
PRODUCTION_USER=postgres
PRODUCTION_PASSWORD=your_postgres_password_here
PRODUCTION_HOST=localhost
PRODUCTION_PORT=5432
DATABASE_URL=postgresql://postgres:your_postgres_password_here@localhost:5432/genealogy_db

# Flask Configuration
FLASK_APP=run.py
FLASK_ENV=development
SECRET_KEY=your-secret-key-here-change-in-production
DEBUG=True

# File Storage
UPLOAD_FOLDER=uploads
MAX_CONTENT_LENGTH=16777216  # 16MB max file size
ALLOWED_EXTENSIONS=pdf,jpg,jpeg,png,gif,tiff,doc,docx,txt

# External API Keys (for future integration)
ANCESTRY_API_KEY=
MYHERITAGE_API_KEY=
FAMILYSEARCH_API_KEY=

# Frontend Configuration
VITE_API_URL=http://localhost:5000/api
VITE_MAX_FILE_SIZE=16777216

# Security
JWT_SECRET_KEY=your-jwt-secret-key-here
JWT_ACCESS_TOKEN_EXPIRES=3600  # 1 hour in seconds

# Email Configuration (for future notifications)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=
MAIL_PASSWORD=
